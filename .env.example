# =============================================================================
# LOCAL SETUP: Copy this file to .env.local and fill in your values.
# VERCEL SETUP: Add these variables in Project Settings > Environment Variables.
# =============================================================================

# Firebase Client (from Firebase Console > Project Settings > Your apps > Web app)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Optional: Set to "true" to use Firebase emulators locally
NEXT_PUBLIC_FIREBASE_USE_EMULATORS=false

# Firebase Admin SDK (from Service accounts > Generate new private key)
# Server-side only â€“ never expose in the browser
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
