# Firebase Client Configuration (from Firebase Console > Project Settings > Your apps > Web app)
# Copy to .env.local and fill in your values
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Optional: Set to "true" to use Firebase emulators for local development
NEXT_PUBLIC_FIREBASE_USE_EMULATORS=false

# Firebase Admin SDK (server-side only - from Service accounts > Generate new private key)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
